@page "/createrole"
@inject HttpClient httpClient

@using ASPectLibrary

<head>
  <meta charset="utf-8">
  <title>Student Role</title>
</head>

<body>
  <EditForm Model="@role" OnValidSubmit="@HandleAdd" class="box">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <h1>Create Role</h1>
    <InputText name="" placeholder="Student Role" @bind-Value="@role.Name" />
    <input type="submit" name="" value="Submit">
  </EditForm>
</body>

@code {
  private ApplicationRole role = new ApplicationRole();

  private async void HandleAdd()
  {
    role.Id = Guid.NewGuid().ToString();
    await httpClient.PostAsJsonAsync(httpClient.BaseAddress, role);
  }
}
